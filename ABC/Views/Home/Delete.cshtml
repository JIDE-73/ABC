@model ABC.Models.Client
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-danger">Continue?</h3>
<div class=" row">
<div class=" col-sm-4">
    <form asp-action="Delete" asp-controller="Home" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="mb-2">
            <label class="col-form-label" asp-for="Name">Full Name</label>
            <input class="form-control form-control-sm" asp-for="Name" type="text" />
        </div>

        <div class="mb-2">
            <label class="col-form-label" asp-for="Email">Email</label>
            <input class="form-control form-control-sm" asp-for="Email" type="text" />
        </div>

        <div class="mb-2">
            <label class="col-form-label" asp-for="Phone">Phone</label>
            <input class="form-control form-control-sm" asp-for="Phone" type="text" />
        </div>

        <div class="mb-2">
            <label class="col-form-label" asp-for="Address">Address</label>
            <input class="form-control form-control-sm" asp-for="Address" type="text" />
        </div>
        <button class="btn btn-primary btn-sm w-25" type="submit">Delete</button>
        <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="Home">Back</a>
    </form>
</div>
</div>
